#!/bin/bash
ZIMBRA_PROVISIONED=false

if [ -f "/opt/zimbra/bin/zmprov" ]; then
  /opt/zimbra/bin/zmprov -l gs `/opt/zimbra/bin/zmhostname` 2>/dev/null
  if [ $? -eq 0 ]; then
    ZIMBRA_PROVISIONED=true
  fi
fi

ZIMBRA_VERSION=`rpm -q --queryformat '%{VERSION}' zimbra-core` 2>/dev/null

cat <<EOF
{
    "version": "$ZIMBRA_VERSION",
    "provisioned": $ZIMBRA_PROVISIONED
}
EOF